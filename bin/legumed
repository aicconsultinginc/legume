#!/usr/bin/env php
<?php

$status = 255;
if (PHP_SAPI == "cli") {
    $autoload = __DIR__ . "/../vendor/autoload.php";

    // Load the Composer auto-loader.
    require_once($autoload);

    // You must supply a file to require for auto-loading on Workers.
    $config = array(Legume\Processor::AUTOLOAD => $autoload);

    // Create and start the new service.
    $service = new Legume\Processor($config);
    $status = $service->run();
}

exit($status);
